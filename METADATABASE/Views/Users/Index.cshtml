@model IEnumerable<METADATABASE.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pfp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjThumbnailImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pfp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjThumbnailImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
