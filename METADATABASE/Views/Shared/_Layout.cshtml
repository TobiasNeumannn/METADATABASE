<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - METADATABASE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/METADATABASE.styles.css" asp-append-version="true" />
    <style type="text/css">
        a.metahead {
            font-family: "Courier New", monospace;
            font-size: 50px;
            font-weight: 600;
            color: #03fcf0;
            text-shadow: 2px 2px 0px black, 0px 4px 0px #10C5BC, 0px 6px 0px black, 0px 8px 0px #0A817B, 0px 10px 0px black, 0px 12px 0px #085F5B;
        }
    </style>
</head>
<body>
    <header style="position: fixed; width: 100%; z-index: 999; box-shadow: black 1px 1px 25px 1px;">
        <nav class="navbar navbar-expand-sm box-shadow mb-3" style="justify-content: center; backdrop-filter: blur(5px);">
            <div class="container-fluid" style="display: flex; flex-direction: column; width: auto;">
                <a class="navbar-brand metahead" asp-area="" asp-controller="Home" asp-action="Index">METADATABASE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-sm-inline-flex justify-content-between">
                    <ul id="dynamicnav" class="navbar-nav flex-grow-1" style="justify-content: center; transition: color 0.3s ease; text-shadow: 0 0 5px #121212;">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="fcontainer">
            &copy; 2024 - METADATABASE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
