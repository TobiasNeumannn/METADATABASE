@model METADATABASE.Models.Comments
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (SignInManager.IsSignedIn(User))
{
<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostsID" class="control-label"></label>
                    <select asp-for="PostsID" class="form-control" asp-items="ViewBag.PostsID"></select>
                </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('#PostsID').value = @ViewData["postId"];
            document.querySelector('#Creation').value = new Date().toISOString().slice(0, 19).replace('T', ' ');
        });
    </script>
}
}
else
{
    <p>Please <a asp-area="Identity" asp-page="/Account/Login">Log In</a> or <a asp-area="Identity" asp-page="/Account/Register">Register</a>.</p>
}
