@model METADATABASE.Models.Comments

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostsID" class="control-label">Post</label>
                <select asp-for="PostsID" class="form-control" asp-items="ViewBag.PostsID" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">User</label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Correct" /> @Html.DisplayNameFor(model => model.Correct)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('#PostsID').value = @ViewData["postId"];
            document.querySelector('#Creation').value = new Date().toISOString().slice(0, 19).replace('T', ' ');
        });
    </script>
}
