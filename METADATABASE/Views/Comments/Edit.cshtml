@model METADATABASE.Models.Comments
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (SignInManager.IsSignedIn(User))
{
<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentsID" />
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" disabled></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="PostsID" class="control-label"></label>
                <select asp-for="PostsID" class="form-control" asp-items="ViewBag.PostsID" disabled></select>
                <span asp-validation-for="PostsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Correct" /> @Html.DisplayNameFor(model => model.Correct)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{
    <p>Please <a asp-area="Identity" asp-page="/Account/Login">Log In</a> or <a asp-area="Identity" asp-page="/Account/Register">Register</a>.</p>
}