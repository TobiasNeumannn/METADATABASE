@model METADATABASE.Models.Reports

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reports</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="PostsID" class="control-label"></label>
                <select asp-for="PostsID" class ="form-control" asp-items="ViewBag.PostsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CommentsID" class="control-label"></label>
                <select asp-for="CommentsID" class ="form-control" asp-items="ViewBag.CommentsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creation" class="control-label"></label>
                <input asp-for="Creation" class="form-control" readonly />
                <span asp-validation-for="Creation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
