@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .form-control {
        height: auto !important;
    }

    #descbox > .form-control:not(:placeholder-shown) ~ label {
        opacity: 0;
    }

    .upload {
        background: transparent !important;
        padding: 10px !important;
        color: white !important;
        border: 0;
    }

    .form-control:focus:has(> .upload) {
        color: white;
        background-color: transparent;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-5" style="margin: auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PfpName" class="form-control" autocomplete="" aria-required="true" placeholder="" />
                <label asp-for="Input.PfpName">Profile Picture Name</label>
                <span asp-validation-for="Input.PfpName" class="text-danger"></span>
            </div>
            Upload Profile Picture
            <div class="form-floating mb-3">
                <input asp-for="Input.PfpFile" class="form-control upload" autocomplete="" aria-required="true" placeholder="" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ProjName" class="form-control" autocomplete="" aria-required="true" placeholder="" />
                <label asp-for="Input.ProjName"></label>
                <span asp-validation-for="Input.ProjName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ThumbName" class="form-control" autocomplete="" aria-required="true" placeholder="" />
                <label asp-for="Input.ThumbName"></label>
                <span asp-validation-for="Input.ThumbName" class="text-danger"></span>
            </div>
            Upload Thumbnail Image
            <div class="form-floating mb-3">
                <input asp-for="Input.ThumbFile" class="form-control upload" autocomplete="" aria-required="true" placeholder="" />
            </div>
                <div class="form-floating mb-3" id="descbox">
                <textarea asp-for="Input.ProjDesc" class="form-control" autocomplete="" aria-required="true" placeholder="" rows="6" cols="50"></textarea>
                <label asp-for="Input.ProjDesc"></label>
                <span asp-validation-for="Input.ProjDesc" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
